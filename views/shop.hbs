<div class="row">
    <section class="main col-md-9">
        {{#if data.items}}
            {{#each data.items}}
                <div class="row">
                    <div class="col-4">
                        <h2><strong>{{title}}</strong></h2>
                        <img src="{{featureImage}}" alt="feature Image" style="width:100%" />
                    </div>

                    <div class="col-8"><br /><br />
                        <div class="row">
                            <div class="col-12">
                                {{#safeHTML}}{{body}}{{/safeHTML}}
                                <br /><br />
                                <strong>Price:</strong> $ {{price}}<br />
                                <strong>Category:</strong> {{category}}<br />
                                <strong>Last Updated:</strong> {{postDate}}
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <div class="col-md-12 text-center">
                <h2>{{data.message}}</h2>
                <p>Please try another Post / Category</p>
            </div>
        {{/if}}
    </section>

    <aside class="col-md-3">
        <br /><br />
        {{#if data.items}}
            <h4>Items</h4>

            <ul class="list-group">
                {{#each data.items}}
                    <a href="/shop/{{id}}?category={{../viewingCategory}}" class="list-group-item">{{title}}</a>
                {{/each}}
            </ul>
        {{/if}}

        {{#if data.categories}}
            <h4>Categories</h4>

            <ul class="list-group">
                {{#each data.categories}}
                    <a href="/shop?category={{id}}" class="list-group-item">{{category}}</a>
                {{/each}}
            </ul>
        {{/if}}
    </aside>
</div>
